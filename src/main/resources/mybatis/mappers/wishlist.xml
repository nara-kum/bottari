<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wishlist">
<!--
	<resultMap id="resultMapWishlistVO" type="com.example.vo.WishlistVO">
	    <result column="wishlist_no" property="wishlist_no" />  
	    <result column="user_no" property="user_no" />
	    <result column="product_no" property="product_no" />
	    <result column="date" property="date" />
	    <result column="ea" property="ea" />
	</resultMap>
-->

	<!-- 전체데이터 가져오기 -->
	<select id="selectList" resultType="com.example.vo.WishlistVO">
		<![CDATA[
			select w.user_no userNo
				, w.wishlist_no wishlistNo
				, p.brand
			    , p.title
			    , p.price
			from users u
				, wishlist w
			    , product p
			where  u.user_no = w.user_no
			and w.product_no = p.product_no
		]]>
	</select>	

	<!-- 1명 데이터 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.example.vo.WishlistVO">
		select 	wishlist_no as wishlistNo,
				user_no as userNo,
		        product_no as productNo,
		        date,
		        ea
		from wishlist
		where wishlist_no = #{wishlistNo}  
 	</select>

</mapper>